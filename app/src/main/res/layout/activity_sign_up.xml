<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--    상단 회원 가입 글씨-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4E0CC3"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원 가입"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/sign_up_user_name_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15"
            android:paddingHorizontal="16dp"
            >
            <TextView
                android:id = "@+id/text_view_sign_up_name_label"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "이름"
                android:textSize = "16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <EditText
                android:id = "@+id/edit_text_sign_up_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름을 입력해주세요"
                app:layout_constraintStart_toStartOf="@+id/text_view_sign_up_name_label"
                app:layout_constraintTop_toBottomOf="@id/text_view_sign_up_name_label"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/sign_up_id_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_user_name_input_container"
            android:paddingHorizontal="16dp"
            >
            <TextView
                android:id = "@+id/text_view_sign_up_id_label"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "이메일"
                android:textSize = "16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <EditText
                android:id = "@+id/edit_text_sign_up_id_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이메일을 입력해주세요"
                app:layout_constraintStart_toStartOf="@+id/text_view_sign_up_id_label"
                app:layout_constraintTop_toBottomOf="@id/text_view_sign_up_id_label"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/sign_up_password_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_id_input_container"
            android:paddingHorizontal="16dp"
            >
            <TextView
                android:id = "@+id/text_view_sign_up_password_label"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "비밀번호"
                android:textSize = "16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <EditText
                android:id = "@+id/edit_text_sign_up_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호를 입력해주세요"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="@+id/text_view_sign_up_password_label"
                app:layout_constraintTop_toBottomOf="@id/text_view_sign_up_password_label"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/sign_up_sex_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_password_input_container"
            android:paddingHorizontal="16dp">
            <TextView
                android:id = "@+id/text_view_sign_up_sex_label"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "성별"
                android:textSize = "16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <RadioGroup
                android:id="@+id/radio_group_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/text_view_sign_up_sex_label"
                app:layout_constraintTop_toBottomOf="@id/text_view_sign_up_sex_label">
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_button_man"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="남"
                    android:checked="true"
                    android:layout_marginEnd="20dp"/>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_button_woman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="여"
                    android:checked="false"/>
            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/sign_up_nickname_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_sex_input_container"
            android:paddingHorizontal="16dp"
            >
            <TextView
                android:id = "@+id/text_view_sign_up_nickname_label"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "닉네임"
                android:textSize = "16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <EditText
                android:id = "@+id/edit_text_sign_up_nickname_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="닉네임을 입력해주세요"
                app:layout_constraintStart_toStartOf="@+id/text_view_sign_up_nickname_label"
                app:layout_constraintTop_toBottomOf="@id/text_view_sign_up_nickname_label"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/sign_up_phone_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_nickname_input_container"
            android:paddingHorizontal="16dp"
            >
            <TextView
                android:id = "@+id/text_view_sign_up_phone_label"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "연락처"
                android:textSize = "16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <EditText
                android:id = "@+id/edit_text_sign_up_phone_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="연락처를 입력해주세요"
                android:inputType="phone"
                app:layout_constraintStart_toStartOf="@+id/text_view_sign_up_phone_label"
                app:layout_constraintTop_toBottomOf="@id/text_view_sign_up_phone_label"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/sign_up_birth_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_phone_input_container"
            android:paddingHorizontal="16dp"
            >
            <TextView
                android:id = "@+id/text_view_sign_up_birth_label"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "생일"
                android:textSize = "16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id = "@+id/text_view_sign_up_birth_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="생일을 입력해주세요"
                android:textSize = "18sp"
                app:layout_constraintStart_toStartOf="@+id/text_view_sign_up_birth_label"
                app:layout_constraintTop_toBottomOf="@id/text_view_sign_up_birth_label"
                android:layout_marginTop="8dp"
                />
            <!--        <DatePicker-->
            <!--            android:id="@+id/date_picker_sign_up"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:calendarViewShown="false"/>-->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button_sign_up_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            app:layout_constraintTop_toBottomOf="@id/sign_up_birth_input_container"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>