<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activity.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id = "@+id/my_info_container"
        android:layout_width="match_parent"
        android:layout_height = "wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view_my_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/soda"
            app:civ_border_width="2dp"
            app:civ_border_color="#673AB7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/without_image_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/without_image_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/image_view_my_image"
            android:layout_marginTop="12dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/my_description_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_background"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttons_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/text_view_my_id_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cjsjizzu"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/text_view_my_name_label"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/text_view_my_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="차지수"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toTopOf="@id/text_view_my_intro_label"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/text_view_my_intro_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시도하고 성장하는 개발자"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/my_description_container"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttons_container"
                android:layout_width="100dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/button_home_more"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/button_background"
                    android:text="MORE"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toTopOf="@+id/button_sign_out"
                    app:layout_constraintTop_toTopOf="parent"/>

                <Button
                    android:id="@+id/button_sign_out"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/button_background"
                    android:text="SIGN OUT"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button_home_more"
                    android:layout_marginTop="5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/my_info_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_repo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_repo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>