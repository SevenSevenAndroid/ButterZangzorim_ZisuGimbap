<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id = "@+id/my_info_container"
        android:layout_width="match_parent"
        android:layout_height = "wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id = "@+id/text_view_my_id_label"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "cjsjizzu"
            android:textSize = "16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_view_my_name_label"
            />
        <TextView
            android:id = "@+id/text_view_my_name_label"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "차지수"
            android:textSize = "30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_view_my_intro_label"
            />
        <TextView
            android:id = "@+id/text_view_my_intro_label"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "시도하고 성장하는 개발자"
            android:textSize = "16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/my_info_container"

            />

        <ImageView
            android:id="@+id/image_view_my_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/love_bird"
            app:layout_constraintBottom_toTopOf="@id/text_view_my_id_label"
            app:layout_constraintStart_toStartOf="@id/my_info_container"
            app:layout_constraintEnd_toEndOf="@id/my_info_container"
            />

        <Button
            android:id="@+id/button_home_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MORE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/my_info_container"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_repository"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_repo">

        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>